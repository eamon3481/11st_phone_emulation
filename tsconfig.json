{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
          "@src/*": ["src/*"],
          "@public/*": ["public/*"]
        },
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
    }
}